{% extends "root.twig" %}

{% block body %}

<div class="container mx-auto text-center">

    <div class="container mx-auto text-center">
        {# <div class="form-group d-flex" hidden>
            <label class="col-form-label col-md-3 text-right" for="Id">Id</label>
            <input class="form-control" type="number" disabled name="Id" data-type="integer" required="required" />
        </div> #}
        <div class="mb-4 w-1/4" >
            <label class="label" for="BusinessNo">Business No</label>
            <input class="input input-bordered w-full" type="number"  name="BusinessNo" data-type="integer"  />
        </div>
        <div class="mb-4 w-1/4" >
            <label class="label" for="DateMonthStart">Date Month Start</label>
            <input type="input" class="input input-bordered w-full" name="DateMonthStart" data-type="varchar"  />
        </div> 
        <div class="mb-4 w-1/4" >
            <label class="label" for="DateMonthEnd">Date Month End</label>
            <input type="input" class="input input-bordered w-full" name="DateMonthEnd" data-type="varchar"  />
        </div> 
        <div class="mb-4 w-1/4" >
            <label class="label" for="DateYearStart">Date Year Start</label>
            <input type="input" class="input input-bordered w-full" name="DateYearStart" data-type="varchar"  />
        </div> 
        <div class="mb-4 w-1/4" >
            <label class="label" for="DateYearEnd">Date Year End</label>
            <input type="input" class="input input-bordered w-full" name="DateYearEnd" data-type="varchar"  />
        </div> 
        <div class="mb-4 w-1/4" >
            <label class="label" for="LabourRate">Labour Rate</label>
            <textarea class="input input-bordered w-full" type="number"  step="0.001"  name="LabourRate" data-type="decimal"   />
        </div>
        <div class="mb-4 w-1/4" >
            <label class="label" for="TaxPercent">Tax Percent</label>
            <textarea class="input input-bordered w-full" type="number"  step="0.001"  name="TaxPercent" data-type="float"   />
        </div>
        <div class="mb-4 w-1/4" >
            <label class="label" for="MarkupPercent">Markup Percent</label>
            <textarea class="input input-bordered w-full" type="number"  step="0.001"  name="MarkupPercent" data-type="float"   />
        </div>
        <div class="mb-4 w-1/4" >
            <label class="label" for="SalesExpense">Sales Expense</label>
            <input class="input input-bordered w-full" type="number"  name="SalesExpense" data-type="integer"  />
        </div>
        <div class="mb-4 w-1/4" >
            <label class="label" for="PurchaseExpense">Purchase Expense</label>
            <input class="input input-bordered w-full" type="number"  name="PurchaseExpense" data-type="integer"  />
        </div>
        <div class="mb-4 w-1/4" >
            <label class="label" for="QuoteExpense">Quote Expense</label>
            <input class="input input-bordered w-full" type="number"  name="QuoteExpense" data-type="integer"  />
        </div>
    
    </div>


    <div class="flex flex-col mx-auto">
        <div class="mb-2 mt-2">
            <a href="{{ path_for('expensecodes.list') }}" class="btn btn-secondary btn-wide">Expense Codes</a>
        </div>
        <div class="mb-2 mt-2">
            <a href="{{ path_for('expensegroups.list') }}" class="btn btn-secondary btn-wide">Expense Groups</a>
        </div>
        <div class="mb-2 mt-2">
            <a href="{{ path_for('taxcodes.list') }}" class="btn btn-secondary btn-wide">Tax Codes</a>
        </div>
        <div class="mb-2 mt-2">
            <a href="{{ path_for('companytypes.list') }}" class="btn btn-secondary btn-wide">Company Types</a>
        </div>
        <div class="mb-2 mt-2">
            <a href="{{ path_for('credittypes.list') }}" class="btn btn-secondary btn-wide">Credit Types</a>
        </div>
        <div class="mb-2 mt-2">
            <a href="{{ path_for('transactiontypes.list') }}" class="btn btn-secondary btn-wide">Transaction Types</a>
        </div>
    </div>
</div>


{% endblock %}

